

<%= form_for(@book) do |f|%>
<%= render 'devise/shared/error_messages', model: f.object, resource: @book %>
<% end %>

<h2>User info</h2>
  <%= attachment_image_tag user, :profile_image, size: "100x100", format: 'jpeg', fallback: "no_image.jpg" %>
  <table class= "table">
    <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
      <tr>
        <th>follows</th>
        <th><p><%= link_to @user.follows.count, follows_user_path(user) %></p></th>
      </tr>
      <tr>
        <th>followers</th>
        <th><p><%= link_to @user.followers.count, followers_user_path(user) %></p></th>
      </tr>
    </tbody>
  </table>
  
  
  <div class="row">
    <% if user == current_user %>
    <%= link_to '',edit_user_path(user), class:"btn btn-outline-secondary btn block fas fa-user-cog w-100" %>
    <% else %>
        <% if user.followed_by?(current_user) %>
            <p><%=link_to "フォロー外す", user_relationships_path(user), method: :delete, class:"btn btn-info w-auto" %></p>
        <% else %>
            <p><%=link_to "フォローする", user_relationships_path(user), method: :post, class:"btn btn-success w-auto" %></p>
        <% end %>
            <% end %>
  </div>

<%= form_with model: book, local:true do |f| %>
<h2 class="mt-3">New book</h2>

<div class="form-group">
  <label for="book_title">Title</label>
  <p><%= f.text_field :title %></p>
</div>

<div class="form-group">
  <label for="book_opinion">Opinion</label>
  <p><%= f.text_area :body %></p>
</div>

<div class="form-group">
  <button type="submit" class="btn btn-success w-auto">Create Book</button>
  <% end %>
</div>