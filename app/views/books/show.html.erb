<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
    <%= render 'books/list', book: @book_new, user: @book.user %>
    </div>
    
        <div class="col-md-8 offset-md-1">
                <h2>Book detail</h2>
                <table class="table table-hover tableinverse">
                
            <tbody>
              <tr>
              <td>
              <%= link_to user_path(@book.user) do %>
              <%= attachment_image_tag @book.user, :profile_image, size: "40x40", fallback: "no_image.jpg" %></br>
              <%= @book.user.name %>
              <% end %></td>
              <td><%= @book.title %></td>
              <td><%= @book.body %></td>
              <td class="favorite-btn_<%= @book.id %>"><%= render 'favorites/favorite-btn', book: @book %></td>
              <% if @book.user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %></td>
              <td><%= link_to "Destroy", book_path(@book.id), class:"btn btn-sm btn-danger", method: :delete, data: {confirm:'本当に消しますか？'} %></td>
              <% end %>
              </tr>
            </tbody>
          </table>
          
          <div class="comment_area">
            <%= render 'books_comments/book_comment', book_comments: @books_comments %>
          </div>
          
          <div class='comment_form'>
            <%= render 'books_comments/form', book: @book, book_comment: @book_comment %>
            </div>

       </div> 
  </div>
</div>
