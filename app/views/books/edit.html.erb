  <div class="container">
    <div class = "row">
        <div class = "col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
          <h1>Editing Book</h1>

<%= form_with model:@book, local:true do |f| %>
<div class="form">
    <div class="form-group">
      <label for="book_title">Title</label>
        <%= f.text_field :title, autofocus: true, :placeholder =>"#{@book.title}", class:"form-control" %>
    </div>
    <div class="form-group">
        <label for="book_title">Opinion</label>
        <%= f.text_area :body, :placeholder =>"#{@book.body}", class:"form-control" %>
    </div>
    <input type="submit" name="commit" value="Update Book" class="btn btn-success">
    </div>
    
    <div><%= link_to "Show", book_path(@book.id) %>|<%= link_to "Back", books_path %></div>
<% end %>