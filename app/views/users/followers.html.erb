<h2>Follower User</h2>
<% if @users.length > 0 %>
<table class="table table-hover tableinverse">
        <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
          <th colspan="3"></th>
        </tr>
        </thead>
        
        <% @users.each do |user| %>   
        <tbody>
            <tr>
              <td>
              <%= attachment_image_tag user,:profile_image, size: "40x40", fallback: "no_image.jpg" %>
              </td>
              <td><%= user.name %></td>
              <td><p>フォロー数:<%= user.follows.count %></p></td>
              <td><p>フォロワー数:<%= user.followers.count %></p></td>
              <td><%= link_to "Show", user_path(user.id) %></td>
            </tr>
        </tbody>
        <% end %>
        <% else %>
        <p>ユーザーはいません</p>
    </table>
    <% end %>