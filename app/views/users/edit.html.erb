<%= form_for(@user) do |f|%>
<%= render 'devise/shared/error_messages', model: f.object, resource: @user %>
<% end %>

<div class="container">
    <div class = "row">
        <div class = "col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
            <h1>User info</h1>
            
<%= form_with model:@user, local:true do |f| %>

    <div class="form-group">
        <label for="user-name">Name</label>
        <%= f.text_field :name, autofocus: true, :placeholder =>"#{@user.name}", class:"form-control" %>
    </div>
    
    <div class="form-group">
  <div class="inputImage">Image</div>
  <%= f.attachment_field :profile_image, placeholder: "Image" %>
    </div>
    
    <div class="form-group">
        <label for="introduction">Introduction</label>
        <%= f.text_area :introduction, :placeholder =>"#{@user.introduction}", class:"form-control" %>
    </div>
    <input type="submit" name="commit" value="Update User" class="btn btn-secondary">
<% end %>