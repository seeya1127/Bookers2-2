<div class="container">
  <div class="row">
    <div class="col-md-3">
<%= render 'books/list', book: @book, user: @user %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
    <table class="table table-hover tableinverse">
        <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
          <th colspan="3"></th>
        </tr>
        </thead>
        
        <% @users.each do |user| %>   
        <tbody>
            <tr>
              <td>
              <%= attachment_image_tag @book.user,:profile_image, size: "40x40", fallback: "no_image.jpg" %>
              </td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user.id) %></td>
              <td><p>フォロー数:<%= user.follows.count %></p></td>
              <td><p>フォロワー数<%= user.followers.count %></p></td>
              <td><% if current_user != user %>
        <% if user.followed_by?(current_user) %>
            <p><%=link_to "フォローを外す", user_relationships_path(user.id), method: :delete %></p>
        <% else %>
            <p><%=link_to "フォローする", user_relationships_path(user.id), method: :post %></p>
        <% end %>
            <% end %></td>
            </tr>
        </tbody>
        <% end %>
    </table>
    </div>
  </div>
</div>