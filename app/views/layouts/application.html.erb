<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="shadow-none">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark p-1">
        <div class="container">
         <a class="navbar-brand p-3" href="/">Bookers</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to 'Home',user_path(current_user.id), class:"fas fa-home text-light" %>
            </li>
            <li class="nav-item">
              <%= link_to 'Users',users_path, class:"fas fa-users text-light" %>
            </li>
            <li class="nav-item">
              <%= link_to 'Books',books_path,class:"fas fa-book-open text-light" %>
            </li>
            <li class="nav-item">
              <%= link_to 'logout', destroy_user_session_path, method: :delete, notice:'You have updated book successfully.', class:"fas fa-sign-out-alt text-light" %>
            </li>
            <% else %>
            <li class="nav-item">
              <%= link_to 'Home', root_path, class:"fas fa-home text-light" %>
            </li>
            <li class="nav-item">
              <%= link_to 'About', home_about_path,class:"fas fa-link text-light" %>
            </li>
            <li class="nav-item">
              <%= link_to 'sign up', new_user_registration_path,class:"fas fa-user-plus text-light" %>
            </li>
            <li class="nav-item">
              <%= link_to 'login',new_user_session_path,class:"fas fa-sign-in-alt text-light" %>
            </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
     <p id="notice"><%=  notice %></p>
  <div class="serch-box">
  <% if user_signed_in? %>
  <%= form_with url:'/search', method: :get, local: true do |f| %>
  <%= select_tag 'range' ,options_for_select([["User", "1"], ["Book", "2"]]) %>
  <%= select_tag 'search', options_for_select([["前方一致","forward_match"], ["後方一致","backward_match"], ["完全一致","perfect_match"], ["部分一致","partial_match"]]) %>
  <%= f.text_field :word %>
  <%= f.submit '検索' %>
  <% end %>
  <% end %>
  </div>
</div>
    </header>
    
    <%= yield %>
  </body>
  
  <div class="conteiner mt-5">
    <div class="row">
      <div class="mx-auto">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</html>
